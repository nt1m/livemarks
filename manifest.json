{
  "manifest_version": 2,
  "background": {
    "scripts": [
      "lib/jquery.min.js",
      "lib/jquery.jfeed.js",
      "shared/settings.js",
      "shared/livemark-store.js",
      "background/background.js"
    ]
  },

  "content_scripts": [
    {
      "js": [ "contentscripts/detector.js"],
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_start"
    },
    {
      "js": [ "contentscripts/feed_finder.js"],
      "matches": [ "http://*/*", "https://*/*" ]
    }
  ],
  "default_locale": "en",
  "description": "Brings RSS Livemarks back to Firefox.",
  "icons": {
    "128": "icons/feed.svg",
    "16": "icons/feed.svg",
    "48": "icons/feed.svg"
  },
  "name": "Livemarks",
  "options_ui": {
     "page": "pages/settings/settings.html",
     "open_in_tab": true
  },
  "page_action": {
    "default_icon": "icons/feed.svg",
    "default_title": "__MSG_rss_subscription_default_title__",
    "default_popup": "popup/popup.html"
  },
  "permissions": [ "storage", "bookmarks", "http://*/", "https://*/", "tabs" ],
  "version": "4.1"
}
